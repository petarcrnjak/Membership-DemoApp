@inherits ViewModelComponentBase<WeatherViewModel>

<AuthorizeView>
    <Authorized>
        @if (ViewModel.IsLoading)
        {
            <div class="d-flex align-items-center">
                <div class="spinner-border text-primary me-2" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <strong>Loading weather data...</strong>
            </div>
        }
        else if (!string.IsNullOrEmpty(ViewModel.ErrorMessage))
        {
            <div class="alert alert-danger" role="alert">
                <strong>Error:</strong> @ViewModel.ErrorMessage
            </div>
        }
        else if (ViewModel.Forecasts.Any())
        {
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Date</th>
                        <th>Temp. (C)</th>
                        <th>Temp. (F)</th>
                        <th>Summary</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var forecast in ViewModel.Forecasts)
                    {
                        <tr>
                            <td>@forecast.Date.ToShortDateString()</td>
                            <td>@forecast.TemperatureC°C</td>
                            <td>@forecast.TemperatureF°F</td>
                            <td>@forecast.Summary</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                No weather data available.
            </div>
        }
    </Authorized>
    <NotAuthorized>
        <NotAuthorizedMessage />
    </NotAuthorized>
</AuthorizeView>

@code {
    protected override async void InitializeViewModel(WeatherViewModel viewModel)
    {
        // Load weather data when component initializes
        await viewModel.GetWeatherAsync();
        StateHasChanged(); // Trigger UI update after async load
    }
}